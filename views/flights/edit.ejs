<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/flights/<%= flight._id %>?_method=PUT" 
    method="POST"
  >
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" value="<%= flight.airline %>" id="airline-input">
    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" value="<%= flight.airport %>" id="airport-input">
    <label for="flightNo-input">Flight Number:</label>
    <input type="text"  name="flightNo" value="<%= flight.flightNo %>" id="flightNo-input">
    <label for="departs-input">Departure Date:</label>
    <input type="datetime-local" name="departs" value= "<%= flight.departs %>"id="departs-input"
    >
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>